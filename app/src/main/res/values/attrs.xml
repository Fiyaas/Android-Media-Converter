<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RecyclerViewContainer">
        <attr name="rv_loadingText" format="string|reference"/>
        <attr name="rv_emptyText" format="string|reference" />
        <attr name="rv_showReloadOnEmpty" format="boolean|reference"/>
        <attr name="rv_paddingVertical" format="dimension"/>
        <attr name="rv_paddingHorizontal" format="dimension"/>
        <attr name="rv_clipToPadding" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="StepIndicator">
        <attr name="indicator_stepCount" format="integer|reference" />
        <attr name="indicator_step" format="integer|reference" />
        <attr name="indicator_size" format="dimension|reference" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_space" format="dimension|reference" />
    </declare-styleable>

    <style name="StepIndicatorDefault">
        <item name="indicator_stepCount">3</item>
        <item name="indicator_step">1</item>
        <item name="indicator_size">8dp</item>
        <item name="indicator_color">?colorAccent</item>
        <item name="indicator_space">4dp</item>
    </style>
</resources>